
<div class="container">

    <h1 class="py-5 text-center">Se connecter</h1>
        <div class="row">
            <%= form_with(scope: :session, url: login_path) do |f|  %>
                <div class="card">
                    <div class="card-body">

                        <div class="mb-3">
                        <%= f.label :email, { class: "form-label"} %>
                        <%= f.email_field :email, { class: "form-control", placeholder: "Email" } %>
                        </div>

                        <div class="mb-3">
                        <%= f.label :password, 'Mot de passe', { class: "form-label"} %>
                        <%= f.password_field :password, { class: "form-control", placeholder: "Mot de passe" } %>
                        </div>
  

                        <%= f.submit "Valider", class: "btn btn-primary" %>

                    </div>
                </div>
            <% end %> 
        </div>
</div>